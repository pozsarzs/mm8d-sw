# Exit codes:
#   0: normal exit
#   1: cannot open configuration file

USRLOCALDIR="1"
if [ $USRLOCALDIR -eq "1" ]
then
  CFGFILE="/usr/local/etc/mm8d/mm8d.ini"
else
  CFGFILE="/etc/mm8d/mm8d.ini"
fi

if [ ! -f $CFGFILE ]
then
  echo "ERROR #1: Cannot open $CFGFILE configuration file!"
exit 1
fi

sudo mm8d-editmainconf.bin $CFGFILE
if [ $? -eq 0 ]
then
  mm8d-stopdaemon
  mm8d-updatestartpage
  mm8d-startdaemon
fi
exit 0
