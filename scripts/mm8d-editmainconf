# Exit codes:
#   0: normal exit
#   1: configuration file is missing

#CFGFILE="/etc/mm8d/mm8d.ini"
CFGFILE="/usr/local/etc/mm8d/mm8d.ini"
if [ ! -f $CFGFILE ]
then
  echo "ERROR: Cannot open configuration file!"
exit 1
fi

sudo mm8d-editmainconf.bin $CFGFILE
if [ $? -eq 0 ]
then
  mm8d-stopdaemon
  mm8d-updatestartpage
  mm8d-startdaemon
fi
exit 0
